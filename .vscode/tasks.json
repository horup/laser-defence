{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["run", "watch"]
        },
        {
            "taskName": "build-cordova",
            "args": ["run", "watch-cordova"]
        },
        {
            "taskName": "build-release",
            "args": ["run", "release"]
        }
    ]
}